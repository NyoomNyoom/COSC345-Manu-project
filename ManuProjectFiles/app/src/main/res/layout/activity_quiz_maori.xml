<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fern_alt"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="15sp"
        android:text="x"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        app:cornerRadius="7sp"
        app:strokeColor="@color/white"
        app:strokeWidth="1sp"
        android:fontFamily="@font/party_confetti_regular"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="7sp"
            app:strokeWidth="3sp"
            app:strokeColor="@color/white"
            android:backgroundTint="@color/black"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/maori_chatham_island_oystercatcher"
                android:layout_gravity="center"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trackThickness="10sp"
            app:trackColor="@color/white"
            app:indicatorColor="@color/progress_bar_indicator"
            android:layout_marginTop="25sp"
            android:layout_marginHorizontal="50sp"
            app:trackCornerRadius="7sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt_0"
            android:layout_width="match_parent"
            android:layout_height="46sp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="10sp"
            android:text="White and Quite spotted flightless "
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            app:cornerRadius="7sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeStepGranularity="1sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt_1"
            android:layout_width="match_parent"
            android:layout_height="46sp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="10sp"
            android:text="Kaikōura tītī"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeStepGranularity="1sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt_2"
            android:layout_width="match_parent"
            android:layout_height="46sp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="10sp"
            android:text="Weka"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeStepGranularity="1sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt_3"
            android:layout_width="match_parent"
            android:layout_height="46sp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="25sp"
            android:text="Kea"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeStepGranularity="1sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="46sp"
            android:layout_marginHorizontal="130sp"
            android:layout_marginBottom="15sp"
            android:text="Submit"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textStyle="italic"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />
    </LinearLayout>

</FrameLayout>