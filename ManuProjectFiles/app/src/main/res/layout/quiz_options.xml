<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType = "centerCrop"
        android:src = "@drawable/fern_alt">
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_option"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="15sp"
        android:text="x"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        app:cornerRadius="7sp"
        app:strokeColor="@color/white"
        app:strokeWidth="1sp"
        android:fontFamily="@font/party_confetti_regular"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/party_confetti_regular"
            android:gravity="center"
            android:text="Quiz Select"
            android:layout_marginBottom="20sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:text="Photo to Name"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_green"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:text="Sound to Name"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_green"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_maori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:text="English to Māori \n*COMING SOON*"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Māori to English \n*COMING SOON*"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

    </LinearLayout>

</FrameLayout>