<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType = "centerCrop"
        android:src = "@drawable/fern_alt">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/party_confetti_regular"
            android:gravity="center"
            android:text="Which quiz would you like to play?" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:text="Image to Name"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_green"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:text="Sound to Name \n*COMING SOON*"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_green"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_maori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:text="English to Māori \n*COMING SOON*"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_green"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Māori to English \n*COMING SOON*"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_green"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

    </LinearLayout>

</FrameLayout>