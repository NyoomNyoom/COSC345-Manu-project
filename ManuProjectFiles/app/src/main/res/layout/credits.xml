<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType = "centerCrop"
        android:src = "@drawable/fern_alt">
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_quit"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="15sp"
        android:text="x"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        app:cornerRadius="7sp"
        app:strokeColor="@color/white"
        app:strokeWidth="1sp"
        android:fontFamily="@font/party_confetti_regular"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView android:id="@+id/credit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="110sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/party_confetti_regular"
            android:gravity="center"
            android:text="credits"
            android:layout_marginBottom="20sp"
            />

        <TextView android:id="@+id/doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Bird Audio Source:\nDepartment of Conservation"
            android:layout_marginBottom="20sp"
            />

        <TextView android:id="@+id/photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Photos:\nDepartment of Conservation"
            android:layout_marginBottom="20sp"
            />


</LinearLayout>

</FrameLayout>