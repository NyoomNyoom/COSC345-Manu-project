<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType = "centerCrop"
        android:src = "@drawable/fern_alt">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/party_confetti_regular"
            android:gravity="center"
            android:text="Hello! \nWelcome to Manu" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="30sp"
            android:text="Play the quiz"
            android:textColor="@color/white"
            android:backgroundTint="#6f8c2a"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_infographics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:text="Access the infographics"
            android:textColor="@color/white"
            android:backgroundTint="#6f8c2a"
            app:strokeWidth="1sp"
            app:strokeColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="7sp"
            />

</LinearLayout>

</FrameLayout>