<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType = "centerCrop"
        android:src = "@drawable/fern">
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="15sp"
        android:text="X"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:layout_gravity="left"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        app:cornerRadius="50sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="x - y"
            android:textStyle="bold"
            android:textSize="75sp"
            android:textColor="@color/white"
            />


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trackThickness="10sp"
            app:trackColor="@color/white"
            app:indicatorColor="@color/black"
            android:paddingTop="55sp"
            android:paddingHorizontal="50sp"
            app:strokeWidth="1sp"
            app:strokeColor="@color/grey"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="70sp"
            android:layout_marginBottom="15sp"
            android:backgroundTint="@color/white"
            android:text="0"
            android:textColor="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="15sp"
            android:text="1"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="15sp"
            android:text="2"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="15sp"
            android:text="3"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="130sp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="30sp"
            android:text="Submit"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />
</LinearLayout>

</FrameLayout>